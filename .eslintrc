{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "node/no-missing-require": "off", // because of ts-node-dev
    "node/shebang": "off", // because of ts-node-dev
    "node/no-deprecated-api": "off",
    "no-process-exit": "off",
    "semi": "off",
    "no-constant-condition": "off",
    "comma-dangle": [2, "never"],
    "consistent-return": 0,
    "func-names": 0,
    "guard-for-in": 0,
    "global-require": 0,
    "one-var": [2, "never"],
    "padded-blocks": 0,
    "vars-on-top": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "no-use-before-define": 0
  }
}
